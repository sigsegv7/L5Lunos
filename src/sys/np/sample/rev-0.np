;;
;; Program entrypoint
;;
proc
main(u8 argc, u8 **argv) -> i8
begin
    u8 *vga = ptr(0x8B000)

    if argc < 2 begin
        return -1
    end

    ;; Draw '*' chars
    for [i=0 : i<8 : i += 2] begin
        vga[i + 0] = '*'    ;; char '*'
        vga[i + 1] = 0x07   ;; red
    end

    return 0
end

